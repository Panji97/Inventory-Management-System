<!DOCTYPE html>
<html lang="en">
  <%-include('../partials/head-search.ejs')%>

  <body data-topbar="dark">
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">
      <%-include('../partials/navbar.ejs')%>
      <!-- ========== Left Sidebar Start ========== -->
      <%-include('../partials/sidebar.ejs')%>
      <!-- Left Sidebar End -->

      <!-- ============================================================== -->
      <!-- Start right Content here -->
      <!-- ============================================================== -->
      <div class="main-content">
        <div class="page-content">
          <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
              <div class="col-12">
                <div
                  class="page-title-box d-sm-flex align-items-center justify-content-between"
                >
                  <h4 class="mb-sm-0">Unit Update</h4>
                </div>
              </div>
            </div>
            <!-- end page title -->

            <div class="row">
              <div class="card">
                <div class="card-body">
                  <form
                    class="needs-validation"
                    novalidate
                    method="post"
                    action="/unit-update-<%= unit._id %>"
                  >
                    <div class="row">
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="unit_name" class="form-label"
                            >Unit Name</label
                          >
                          <input
                            type="text"
                            name="unit_name"
                            id="unit_name"
                            value="<%= unit.unit_name %>"
                            class="form-control"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="unit_serial_number" class="form-label"
                            >Unit Serial Number</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            value="<%= unit.unit_serial_number %>"
                            id="unit_serial_number"
                            name="unit_serial_number"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="unit_type" class="form-label"
                            >Unit Type</label
                          >
                          <input
                            type="text"
                            name="unit_type"
                            id="unit_type"
                            value="<%= unit.unit_type %>"
                            class="form-control"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="unit_model" class="form-label"
                            >Unit Model</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="unit_model"
                            value="<%= unit.unit_model %>"
                            name="unit_model"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="unit_processor" class="form-label"
                            >Unit Processor</label
                          >
                          <select
                            class="form-select"
                            id="unit_processor"
                            name="unit_processor"
                            required
                          >
                            <option
                              selected
                              disabled
                              value="<%= unit.unit_processor %>"
                            >
                              <%= unit.unit_processor %>
                            </option>
                            <option value="i5">i5</option>
                            <option value="i7">i7</option>
                          </select>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="unit_ram" class="form-label"
                            >Unit RAM</label
                          >
                          <select
                            class="form-select"
                            id="unit_ram"
                            name="unit_ram"
                            required
                          >
                            <option
                              selected
                              disabled
                              value="<%= unit.unit_ram %>"
                            >
                              <%= unit.unit_ram %>
                            </option>
                            <option value="8GB">8GB</option>
                            <option value="16GB">16GB</option>
                          </select>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="unit_ssd" class="form-label"
                            >Unit SSD</label
                          >
                          <select
                            class="form-select"
                            id="unit_ssd"
                            name="unit_ssd"
                            required
                          >
                            <option
                              selected
                              disabled
                              value="<%= unit.unit_ram %>"
                            >
                              <%= unit.unit_ram %>
                            </option>
                            <option value="512GB">512GB</option>
                            <option value="1TB">1TB</option>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="unit_date_in" class="form-label"
                            >Unit Date In</label
                          >
                          <input
                            type="date"
                            class="form-control"
                            value="<%= unit.unit_date_in %>"
                            id="unit_date_in"
                            name="unit_date_in"
                          />
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="unit_date_use" class="form-label"
                            >Unit Date Use</label
                          >
                          <input
                            type="date"
                            class="form-control"
                            id="unit_date_use"
                            value="<%= unit.unit_date_use %>"
                            name="unit_date_use"
                          />
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="unit_date_out" class="form-label"
                            >Unit Date Out</label
                          >
                          <input
                            type="date"
                            class="form-control"
                            id="unit_date_out"
                            value="<%= unit.unit_date_out %>"
                            name="unit_date_out"
                          />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-lg-4">
                        <div class="mb-3">
                          <label class="form-label"
                            >Resource Asset Holder</label
                          >
                          <select class="form-control select2">
                            <option value="<%= unit.resource_name %>">
                              <%= unit.resource_name %>
                            </option>
                            <optgroup>
                              <%resource.map((item)=>{%>
                              <option value="<%=item.resource_name%>">
                                <%=item.resource_name%>
                              </option>
                              <%})%>
                            </optgroup>
                          </select>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="unit_asset_status" class="form-label"
                            >Unit Asset Status</label
                          >
                          <select
                            class="form-select"
                            id="unit_asset_status"
                            name="unit_asset_status"
                            required
                          >
                            <option
                              selected
                              disabled
                              value="<%= unit.unit_asset_status %>"
                            >
                              <%= unit.unit_asset_status %>
                            </option>
                            <option value="Personal">Personal</option>
                            <option value="DGE">DGE</option>
                          </select>
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="supplier_name" class="form-label"
                            >Unit Supplier</label
                          >
                          <select
                            class="form-select"
                            id="supplier_name"
                            name="supplier_name"
                            required
                          >
                            <option
                              selected
                              disabled
                              value="<%= unit.supplier_name %>"
                            >
                              <%= unit.supplier_name %>
                            </option>
                            <%supplier.map((item)=>{%>
                            <option value="<%=item.supplier_name%>">
                              <%=item.supplier_name%>
                            </option>
                            <%})%>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="d-flex justify-content-between">
                      <button class="btn btn-primary" type="submit">
                        Update Data
                      </button>

                      <!-- Button trigger modal -->
                      <a
                        type="button"
                        class="btn btn-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#exampleModal"
                      >
                        <i class="fas fa-trash"></i>
                      </a>

                      <!-- Modal -->
                      <div
                        class="modal fade"
                        id="exampleModal"
                        tabindex="-1"
                        aria-labelledby="exampleModalLabel"
                        aria-hidden="true"
                      >
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h1
                                class="modal-title fs-5"
                                id="exampleModalLabel"
                              >
                                Delete this data?
                              </h1>
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                              >
                                Close
                              </button>
                              <a
                                type="button"
                                class="btn btn-danger"
                                href="/unit-delete-<%= unit._id %>"
                              >
                                Delete
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
              <!-- end card -->

              <!-- end col -->
            </div>
          </div>
        </div>
        <!-- End Page-content -->
      </div>
      <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <%-include('../partials/js-search.ejs')%>
  </body>
</html>
