<!DOCTYPE html>
<html lang="en">
  <%-include('../partials/head.ejs')%>

  <body data-topbar="dark">
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">
      <%-include('../partials/navbar.ejs')%>
      <!-- ========== Left Sidebar Start ========== -->
      <%-include('../partials/sidebar.ejs')%>
      <!-- Left Sidebar End -->

      <!-- ============================================================== -->
      <!-- Start right Content here -->
      <!-- ============================================================== -->
      <div class="main-content">
        <div class="page-content">
          <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
              <div class="col-12">
                <div
                  class="page-title-box d-sm-flex align-items-center justify-content-between"
                >
                  <h4 class="mb-sm-0">Supplier Update</h4>
                </div>
              </div>
            </div>
            <!-- end page title -->

            <div class="row">
              <div class="card">
                <div class="card-body">
                  <form
                    class="needs-validation"
                    novalidate
                    method="post"
                    action="/supplier-update-<%= supplier._id %>"
                  >
                    <div class="row">
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="supplier_name" class="form-label"
                            >Supplier Name</label
                          >
                          <input
                            type="text"
                            name="supplier_name"
                            id="supplier_name"
                            value="<%= supplier.supplier_name %>"
                            class="form-control"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="supplier_pic" class="form-label"
                            >Supplier PIC</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="supplier_pic"
                            name="supplier_pic"
                            value="<%= supplier.supplier_pic %>"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="supplier_mobile" class="form-label"
                            >Mobile</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="supplier_mobile"
                            name="supplier_mobile"
                            value="<%= supplier.supplier_mobile %>"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="supplier_email" class="form-label"
                            >Email</label
                          >
                          <input
                            type="email"
                            class="form-control"
                            id="supplier_email"
                            value="<%= supplier.supplier_email%>"
                            name="supplier_email"
                            required
                          />
                        </div>
                      </div>

                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="supplier_address" class="form-label"
                            >Address</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            value="<%= supplier.supplier_address %>"
                            id="supplier_address"
                            name="supplier_address"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="d-flex justify-content-between">
                      <button class="btn btn-primary" type="submit">
                        Update Data
                      </button>

                      <!-- Button trigger modal -->
                      <a
                        type="button"
                        class="btn btn-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#exampleModal"
                      >
                        <i class="fas fa-trash"></i>
                      </a>

                      <!-- Modal -->
                      <div
                        class="modal fade"
                        id="exampleModal"
                        tabindex="-1"
                        aria-labelledby="exampleModalLabel"
                        aria-hidden="true"
                      >
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h1
                                class="modal-title fs-5"
                                id="exampleModalLabel"
                              >
                                Delete this data?
                              </h1>
                            </div>
                            <div class="modal-footer">
                              <button
                                type="button"
                                class="btn btn-secondary"
                                data-bs-dismiss="modal"
                              >
                                Close
                              </button>
                              <a
                                type="button"
                                class="btn btn-danger"
                                href="/supplier-delete-<%= supplier._id %>"
                              >
                                Delete
                              </a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
              <!-- end card -->

              <!-- end col -->
            </div>
          </div>
        </div>
        <!-- End Page-content -->
      </div>
      <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <%-include('../partials/js.ejs')%>
  </body>
</html>
