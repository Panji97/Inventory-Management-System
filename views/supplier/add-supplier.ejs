<!DOCTYPE html>
<html lang="en">
  <%-include('../partials/head.ejs')%>

  <body data-topbar="dark">
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">
      <%-include('../partials/navbar.ejs')%>
      <!-- ========== Left Sidebar Start ========== -->
      <%-include('../partials/sidebar.ejs')%>
      <!-- Left Sidebar End -->

      <!-- ============================================================== -->
      <!-- Start right Content here -->
      <!-- ============================================================== -->
      <div class="main-content">
        <div class="page-content">
          <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
              <div class="col-12">
                <div
                  class="page-title-box d-sm-flex align-items-center justify-content-between"
                >
                  <h4 class="mb-sm-0">Supplier Add</h4>
                </div>
              </div>
            </div>
            <!-- end page title -->

            <div class="row">
              <div class="card">
                <div class="card-body">
                  <form
                    class="needs-validation"
                    novalidate
                    method="post"
                    onsubmit="myFunction()"
                    action="/supplier-create"
                  >
                    <div class="row">
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="supplier_name" class="form-label"
                            >Supplier Name</label
                          >
                          <input
                            type="text"
                            name="supplier_name"
                            id="supplier_name"
                            class="form-control"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="mb-3">
                          <label for="supplier_pic" class="form-label"
                            >Supplier PIC</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="supplier_pic"
                            name="supplier_pic"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="supplier_mobile" class="form-label"
                            >Mobile</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="supplier_mobile"
                            name="supplier_mobile"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="supplier_email" class="form-label"
                            >Email</label
                          >
                          <input
                            type="email"
                            class="form-control"
                            id="supplier_email"
                            name="supplier_email"
                            required
                          />
                        </div>
                      </div>

                      <div class="col-md-4">
                        <div class="mb-3">
                          <label for="supplier_address" class="form-label"
                            >Address</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="supplier_address"
                            name="supplier_address"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div>
                      <button class="btn btn-primary" type="submit">
                        Add Data
                      </button>
                    </div>
                  </form>
                </div>
              </div>
              <!-- end card -->

              <!-- end col -->
            </div>
          </div>
        </div>
        <!-- End Page-content -->
      </div>
      <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <%-include('../partials/js.ejs')%>
  </body>
</html>
