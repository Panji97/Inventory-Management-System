<!DOCTYPE html>
<html lang="en">
  <%-include('../partials/head-table.ejs')%>

  <body data-topbar="dark">
    <!-- <body data-layout="horizontal" data-topbar="dark"> -->

    <!-- Begin page -->
    <div id="layout-wrapper">
      <%-include('../partials/navbar.ejs')%>
      <!-- ========== Left Sidebar Start ========== -->
      <%-include('../partials/sidebar.ejs')%>
      <!-- Left Sidebar End -->

      <!-- ============================================================== -->
      <!-- Start right Content here -->
      <!-- ============================================================== -->
      <div class="main-content">
        <div class="page-content">
          <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
              <div class="col-12">
                <div
                  class="page-title-box d-sm-flex align-items-center justify-content-between"
                >
                  <h4 class="mb-sm-0">Supplier</h4>
                </div>
              </div>
            </div>
            <!-- end page title -->

            <div class="row">
              <div class="col-12">
                <%-include('../partials/message.ejs')%>
                <div class="card">
                  <div class="card-body">
                    <table
                      id="datatable"
                      class="table table-bordered dt-responsive nowrap"
                      style="
                        border-collapse: collapse;
                        border-spacing: 0;
                        width: 100%;
                      "
                    >
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>PIC</th>
                          <th>Mobile</th>
                          <th>Email</th>
                          <th>Address</th>
                          <th>Action</th>
                        </tr>
                      </thead>

                      <tbody>
                        <% for(let i = 0 ; i < supplier.length ; i++){%>
                        <tr>
                          <td><%= supplier[i].supplier_name %></td>
                          <td><%= supplier[i].supplier_pic %></td>
                          <td><%= supplier[i].supplier_mobile %></td>
                          <td><%= supplier[i].supplier_email %></td>
                          <td><%= supplier[i].supplier_address %></td>
                          <td>
                            <a
                              href="/supplier-edit-<%= supplier[i]._id %>"
                              class="btn btn-info sm"
                              title="Edit Data"
                            >
                              <i class="fas fa-edit"></i>
                            </a>
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <!-- end col -->
            </div>
            <!-- end row -->
          </div>
        </div>
        <!-- End Page-content -->
      </div>
      <!-- end main content-->
    </div>
    <!-- END layout-wrapper -->

    <%-include('../partials/js-table.ejs')%>
  </body>
</html>
